<Window x:Class="WpfApplication1.WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="171" Width="299" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
