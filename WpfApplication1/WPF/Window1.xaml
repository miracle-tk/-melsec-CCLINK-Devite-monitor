            <TextBlock Text="Connect" FontSize="22"  Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Margin="0,54,0,41">
            <TextBlock Text="Channel Number" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,9"/>
            <ComboBox x:Name="comboboxChannelnumber" VerticalAlignment="Center" HorizontalAlignment="Right" Width="148" Margin="0,10,10,7">
