                <ComboBoxItem >82 CCLINK SLOT 2</ComboBoxItem>
                <ComboBoxItem>83 CCLINK SLOT 3</ComboBoxItem>
                <ComboBoxItem>84 CCLINK SLOT 4</ComboBoxItem>
            </ComboBox>
        </Grid>
        <Button Click="buttonConnect_Click" x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="48,129,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Click="buttonCancel_Click" x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="153,129,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
